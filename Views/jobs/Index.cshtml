@model IEnumerable<job_offers.Models.job>

@{
    ViewBag.Title = "Index";
    
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-bordered table-hover ">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.category.categoryname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.jobtitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.jobimg)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.jobdiscrption)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.category.categoryname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.jobtitle)
        </td>
        <td>
            <img src="~/uploads/@Html.DisplayFor(modelItem => item.jobimg )"
                 class="thumbnail" style="width:48px; height:48px;" />
        </td>
        <td>
            @Html.Raw(HttpUtility.HtmlDecode(Html.DisplayFor(modelItem => item.jobdiscrption).ToString()))
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
